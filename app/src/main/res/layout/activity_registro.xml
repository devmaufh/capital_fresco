<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context="com.example.lsaal.cf.Registro"
    android:background="@color/colorAccent">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/blanco"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Crear Cuenta "
            android:textColor="@color/negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textView3"
            android:backgroundTint="@color/colorPrimary"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/add"
            android:id="@+id/imageView4"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />

        <TextView
            android:text="Ingresa tus datos:"
            android:textColor="@color/negro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:foregroundGravity="center"
            android:gravity="center"
            android:layout_centerInParent="false"
            android:layout_below="@+id/imageView4"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            tools:textStyle="italic" />
    </LinearLayout>

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/blanco"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edtNombre"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Nombre (s)"
                android:inputType="textPersonName"
                android:maxLength="20" />


            <EditText
                android:id="@+id/edtApellidos"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Apellidos"
                android:inputType="text|textPersonName"
                android:maxLength="30" />

            <EditText
                android:id="@+id/edtCurp"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:capitalize="words"
                android:ems="10"
                android:gravity="center"
                android:hint="CURP (RAPL950515HGTMLS05)"
                android:inputType="text"
                android:maxLength="18" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    app:srcCompat="@drawable/codigo"
                    android:id="@+id/imageView8"
                    android:layout_gravity="center"
                    android:layout_width="170dp"
                    android:layout_height="100dp" />

                <EditText
                    android:id="@+id/edtINE"
                    android:layout_width="170dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginEnd="17dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/obj_redondo"
                    android:backgroundTint="@color/b_edit"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Código CIC INE"
                    android:inputType="date"
                    android:maxLength="14" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edtFechaNa"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Fecha nacimiento (AAAA-MM-DD))"
                android:inputType="date"
                android:maxLength="10" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

            <EditText
                android:id="@+id/edtUbicacion"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Dirección (Calle, Colonia, CP)"
                android:inputType="textPostalAddress"
                android:maxLength="40" />

            <EditText
                android:id="@+id/edtCorreo"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Correo electronico"
                android:inputType="text|textEmailAddress"
                android:maxLength="30" />

            <EditText
                android:id="@+id/edtNumTelefonico"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:autoLink="phone"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:gravity="center"
                android:hint="Número Telefonico"
                android:inputType="number"
                android:maxLength="10" />

            <EditText
                android:id="@+id/edtContraseña"
                android:layout_width="325dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical|center"
                android:layout_margin="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/b_edit"
                android:ems="10"
                android:gravity="center"
                android:hint="Contraseña"
                android:inputType="textVisiblePassword"
                android:maxHeight="30dp"
                android:password="true" />

            <Button
                android:id="@+id/btnEnviar_D"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/obj_redondo"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:textColor="@color/blanco"
                android:text="Enviar datos"
                android:textSize="16dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>